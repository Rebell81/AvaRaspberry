<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AvaRaspberry.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Background="#B0E0E6"
             x:Class="AvaRaspberry.Views.SynologyView">
    <UserControl.DataContext>
		<viewModels:SynologyViewModel/>
    </UserControl.DataContext>
	<UserControl.Resources>
	</UserControl.Resources>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock TextAlignment="Center" Text="{Binding Name}"/>
		<TextBlock TextAlignment="Center" Text="{Binding IsConnected}"/>
		<TextBlock TextAlignment="Center" Text="{Binding ErrorCode}"/>

        <Grid>
	        <ProgressBar Height="20" HorizontalAlignment="Stretch" Maximum="{Binding TotalRam}" Value="{Binding CurrentRam}"/>
	        <TextBlock TextAlignment="Center" Text="{Binding RamText}"/>
        </Grid>
        
		<TextBlock TextAlignment="Center" Text="{Binding Cpu}"/>
		<TextBlock TextAlignment="Center" Text="{Binding Network}"/>
	</StackPanel>
</UserControl>
